public class Solution {
    // DO NOT MODIFY THE ARGUMENTS WITH "final" PREFIX. IT IS READ ONLY
    public int maxSubArray(final int[] A) {
        int n = A.length;
        int sum = 0;
        int Ans = Integer.MIN_VALUE;
        
        for(int i = 0 ; i < n ; i++){
            sum += A[i];
            if(sum > Ans){
                Ans = sum;
            }
            if(sum < 0){
                sum = 0;
            }
            
        }
        return Ans;

    }
}
